#!/bin/bash

SIZE=72

CAPTION="$(
    echo "$2" |
    tr 'qwertyuiopasdfghjklzxcvbnm' 'QWERTYUIOPASDFGHJKLZXCVBNM'
)"

geo="$(
    identify -verbose "$1" |
    sed -n 's/  Geometry: \(.*\)/\1/p'
)"

convert \
    "$1" \
    -background none -size "$geo" -font impact -pointsize $SIZE \
    -gravity north \
    -stroke '#000C' -strokewidth 6 caption:"$2" \
    -composite \
    -stroke none -fill white caption:"$2" \
    -composite \
    -gravity south \
    -stroke '#000C' -strokewidth 6 caption:"$3" \
    -composite \
    -stroke none -fill white caption:"$3" \
    -composite \
    "$4"
